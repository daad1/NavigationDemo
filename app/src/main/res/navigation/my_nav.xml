<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/fragment_home">

    <fragment
        android:id="@+id/fragment_home"
        android:name="com.example.navigationdemo.Fragment_home"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_fragment_home_to_fragment_new"
            app:destination="@id/fragment_new" />
    </fragment>
    <fragment
        android:id="@+id/fragment_new"
        android:name="com.example.navigationdemo.Fragment_new"
        android:label="fragment_new"
        tools:layout="@layout/fragment_new" >
        <action
            android:id="@+id/action_fragment_new_to_fragment_home"
            app:destination="@id/fragment_home" />
    </fragment>
</navigation>